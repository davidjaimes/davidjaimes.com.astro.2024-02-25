---
import Footer from "../components/footer.astro";
import Navigation from "../components/navigation.astro";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width"/>
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="David Jaimes website powered by Google Domains, Astro.build, and GitHub Pages." />
		<title>David Jaimes - {title}</title>
		<!-- Katex -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css" integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ" crossorigin="anonymous">
	</head>
	<body class="bg-[#0d1117]">
		<Navigation></Navigation>
        <slot/>
		<Footer></Footer>
	</body>
</html>

<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

    :global(.post-content h2) {
        @apply text-2xl font-bold pb-6 pt-10 text-white
    }
    :global(.post-content p) {
        @apply pb-6 font-normal leading-relaxed;
    }
	:global(.post-content pre) {
		@apply mb-6 p-4 rounded-lg text-xs bg-[#161b22] !important;
	}
	:global(.post-content ul) {
		@apply list-disc list-outside pl-10
	}
	:global(.post-content ol) {
		@apply list-decimal list-outside pl-10
	}
	:global(.post-content a) {
		@apply text-sky-500 hover:text-sky-700 underline
	}
	:global(.post-content code) {
		@apply text-pink-500 text-sm bg-[#161b22] rounded-lg p-1
	}
	:global(.post-content strong) {
		@apply font-bold text-white
	}
</style>